<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/request_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/request_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/request_username"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textAlignment="textStart"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="start" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/request_accept_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Accept"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/request_decline_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Decline"
                    android:layout_marginLeft="15dp"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:visibility="invisible"/>
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/request_linear_layout"
        android:background="?android:attr/listDivider" />


</RelativeLayout>